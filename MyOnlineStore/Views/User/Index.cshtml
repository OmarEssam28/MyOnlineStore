@model IEnumerable<User>

<h2>User List</h2>

<p>
    <a href="/User/Create">+ Add New User</a>
</p>

<table border="1">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FirstName</td>
            <td>@item.LastName</td>
            <td>@item.Email</td>
            <td>
                <a href="/User/Details/@item.UserId">Details</a> |
                <a href="/User/Edit/@item.UserId">Edit</a> |
                <a href="/User/Delete/@item.UserId">Delete</a>
            </td>
        </tr>
    }
</table>
