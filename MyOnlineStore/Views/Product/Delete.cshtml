@model MyOnlineStore.Models.Product

<div class="container mt-4">
    <h2 class="text-danger text-center">Delete Product</h2>
    <hr />

    <div class="alert alert-warning text-center">
        <strong>Are you sure you want to delete this product?</strong>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-3 mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Model.Quantity</dd>

                        <dt class="col-sm-4">Image</dt>
                        <dd class="col-sm-8">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" alt="Product Image" width="100" height="100" />
                            }
                            else
                            {
                                <span>No Image</span>
                            }
                        </dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category?.Name</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="ProductId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
