@model Product

<div class="d-flex justify-content-center">
    <h1 class="text-success">Product Details</h1>
</div>

<br />
<hr />
<br />

<div class="d-flex justify-content-center">
    <div class="card" style="width: 22rem;">
        <div class="card-body">
            <h5 class="card-title">@Html.DisplayNameFor(p => p.Title): @Model.Title</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(p => p.ProductId): @Model.ProductId</h6>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(p => p.Price): @Model.Price</h6>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(p => p.Quantity): @Model.Quantity</h6>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(p => p.Description): @Model.Description</h6>
            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayNameFor(p => p.Category): @Model.Category?.Name</h6>

            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="text-center mt-3">
                    <img src="@Model.ImagePath" alt="Product Image" style="max-width: 100%; height: auto;" />
                </div>
            }

            <div class="d-flex justify-content-center">
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary mt-4">Back</a>
            </div>
        </div>
    </div>
</div>
