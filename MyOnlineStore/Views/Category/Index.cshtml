@model IEnumerable<Category>

<h2>Category List</h2>

<p><a href="/Category/Create">+ Add New Category</a></p>

<table border="1">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                <a href="/Category/Details/@item.CategoryId">Details</a> |
                <a href="/Category/Edit/@item.CategoryId">Edit</a> |
                <a href="/Category/Delete/@item.CategoryId">Delete</a>
            </td>
        </tr>
    }
</table>
